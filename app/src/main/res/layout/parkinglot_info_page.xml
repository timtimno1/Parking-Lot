<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
            android:id="@+id/parkingLot_phone_number"
            android:textSize="15sp"
            android:textColor="#444"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            android:drawablePadding="2dp"
            app:drawableLeftCompat="@drawable/ic_phone">
    </TextView>
    <TextView
            android:id="@+id/parkingLot_price"
            android:textSize="15sp"
            android:textColor="#444"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            android:drawablePadding="2dp"
            app:drawableLeftCompat="@drawable/ic_price">
    </TextView>
    <TextView
            android:id="@+id/parkingLot_address"
            android:textSize="15sp"
            android:textColor="#444"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            android:drawablePadding="2dp"
            app:drawableLeftCompat="@drawable/ic_address">
    </TextView>
    <TextView
            android:id="@+id/parkingLot_opening_hours"
            android:textSize="15sp"
            android:textColor="#444"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            android:drawablePadding="2dp"
            app:drawableLeftCompat="@drawable/ic_opening_hours">
    </TextView>
</LinearLayout>